<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:windowSoftInputMode="adjustResize">

    <data class=".ViewTextInputBinding">

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/view_text_input_et_main"
            android:background="@drawable/bg_text_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="15sp"
            android:gravity="start"
            android:clickable="true"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="52dp"
            android:textColorHint="@color/grey_500"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:ignore="Autofill,KeyboardInaccessibleWidget,LabelFor"
            tools:text="This is a miracle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/view_text_input_bt_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:src="@drawable/baseline_send_white_24"
            app:tint="@color/blue_600"
            app:layout_constraintEnd_toEndOf="@id/view_text_input_et_main"
            app:layout_constraintBottom_toBottomOf="@id/view_text_input_et_main"
            tools:ignore="ContentDescription" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>